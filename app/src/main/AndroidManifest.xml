<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="joeuser.medassist2">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainLoginActivity"
            android:label="@string/title_activity_main_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HomeScreenActivity"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.DiseaseActivity"
            android:label="Disease Name Here"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AccountSettingsActivity"
            android:label="@string/title_activity_account_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MedicalHistoryActivity"
            android:label="LastName, FirstName"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CurrentPatientsActivity"
            android:label="@string/title_activity_current_patients"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>
</manifest>